<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccountActivity">

    <TextView
        android:id="@+id/createAccountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="21dp"
        android:text="@string/create_account_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/formLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/formLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/emailRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/emailLabel"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="@string/prompt_email"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Space
                android:layout_width="24dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/prompt_email"
                android:textColor="#99000000" />
        </TableRow>

        <TableRow
            android:id="@+id/passwdRow"
            android:layout_width="match_parent"
            android:layout_height="71dp">

            <TextView
                android:id="@+id/passwdLabel"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="@string/prompt_password"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Space
                android:layout_width="24dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/passwdInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/prompt_password"
                android:textColor="#99000000" />
        </TableRow>

        <TableRow
            android:id="@+id/checkPasswdRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/checkPasswdLabel"
                android:layout_width="122dp"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="@string/check_password"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Space
                android:layout_width="24dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/checkPasswdInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/check_password"
                android:textColor="#99000000" />
        </TableRow>

        <TableRow
            android:id="@+id/verifyPasswdRow"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:visibility="invisible">

            <Space
                android:layout_width="24dp"
                android:layout_height="match_parent" />

            <Space
                android:layout_width="24dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/passwdNotMatchTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/passwords_not_match"
                android:textColor="#C6FF0000" />
        </TableRow>

        <TableRow
            android:id="@+id/phoneRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/phoneLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="@string/prompt_phone"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/phoneInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/prompt_phone"
                android:textColor="#99000000" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="119dp"
        android:layout_height="45dp"
        android:layout_marginBottom="241dp"
        android:background="#884CAF50"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/create_account"
        android:textAllCaps="false"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/formLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>